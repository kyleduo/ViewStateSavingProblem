<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>


	<style name="BaseTextAppearance">
		<item name="android:textSize">@dimen/text_size_body</item>
		<item name="android:textColor">@color/text_color_body</item>
	</style>

	<style name="BodyTextAppearance" parent="BaseTextAppearance">
		<item name="android:textSize">@dimen/text_size_body</item>
		<item name="android:textColor">@color/text_color_body</item>
	</style>

	<style name="BaseTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:singleLine">true</item>
		<item name="android:minHeight">0dp</item>
		<item name="android:minWidth">0dp</item>
		<item name="android:textColorHint">#cccccc</item>
		<item name="android:textColor">@color/text_color_body</item>
		<item name="android:textAppearance">@style/BaseTextAppearance</item>
	</style>

	<style name="BodyTextView" parent="BaseTextView">
		<item name="android:textAppearance">@style/BodyTextAppearance</item>
		<item name="android:paddingRight">@dimen/base_space</item>
		<item name="android:paddingLeft">@dimen/base_space</item>
		<item name="android:paddingTop">@dimen/base_space</item>
		<item name="android:paddingBottom">@dimen/base_space</item>
		<item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
	</style>


</resources>
